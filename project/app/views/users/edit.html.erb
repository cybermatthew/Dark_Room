<% @user.errors.full_messages.each do |msg| %>
  <h1 class="error"><%= msg %></h1>
<% end %>
<h1>Edit <%= @user.username %>'s Profile</h1>

<%= form_for(@user) do |form| %>
  New Password: <br/><%= form.password_field(:password) %><br/>
  New Password (again): <br/><%= form.password_field(:password_confirmation) %><br/>
  Bio: <br/><%= form.text_area(:bio, size: '50x10') %><br/>
  <br/>
  <%= form.submit "Edit Profile" %>
<% end %>