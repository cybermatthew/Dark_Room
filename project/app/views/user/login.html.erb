<h1>User Login</h1>

<% if flash[:loggedin] %>
	<p><%= flash[:loggedin] %> | <a href="/user/logout">Logout?</a></p>
<% else %>
	<p>If you don't have an account, <a href="/user/new">register here</a>.</p>

	<%= form_for @user, :url => {:action => :post_login} do |form| %>
		  Username: <br/><%= form.text_field(:username) %><br/>
		  Password: <br/><%= form.password_field(:password) %><br/><br/>
		  <%= form.submit "Login" %>
	<% end %>
<% end %>